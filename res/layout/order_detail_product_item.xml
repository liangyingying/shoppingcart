<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_detail_product_url"
        android:visibility="invisible"/>
    
    <!-- 商品名 -->
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/level_1"
        android:id="@+id/order_detail_product_image"/>
    
    <!-- 商品名 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/order_detail_product_image"
        android:id="@+id/order_detail_product_name"
        android:text="product_name"
        android:layout_margin="2dp"/>

    <!-- 价格 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/order_detail_product_image"
        android:id="@+id/order_detail_product_price"
        android:text="$40"
        android:textColor="#FF0000"
        android:layout_margin="2dp"
        android:layout_alignBottom="@id/order_detail_product_image"/>
    
    <!-- 商品个数 -->
	<TextView 
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_detail_product_qty"
        android:layout_toRightOf="@id/order_detail_product_price"
        android:layout_alignBottom="@id/order_detail_product_price"
        android:layout_marginLeft="12dp"
        android:text=""/>
	
	<!-- 评价按钮 -->
	<Button 
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_detail_product_comment_button" 
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/order_detail_product_price"
        android:text="@string/go_to_comment"/>
	
</RelativeLayout>