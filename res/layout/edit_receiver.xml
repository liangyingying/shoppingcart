<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#2F7D6D" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/receiver_edit_back"
            android:layout_alignParentLeft="true" 
            android:layout_marginLeft="8dp"
            android:background="@drawable/back"
            android:layout_centerVertical="true"/>
             
        <TextView
            android:id="@+id/receiver_edit_titlebar" 
            android:layout_width="wrap_content" 
            android:layout_height="40dip" 
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp"/> 

        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/receiver_save"
            android:text="保存"/>
         
	</RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
	    android:orientation="vertical" >
        
    
    
    <!-- 收货人姓名 -->
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="16dp" >

		<TextView
			android:layout_width="70dp"
			android:layout_height="wrap_content" 			
			android:id="@+id/receiver_name_text"
			android:text="收货人："/>

		<EditText
			android:id="@+id/receiver_name_edittext"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="14sp"
			android:maxLength="35"
			android:singleLine="true"
			android:background="@drawable/edittext_bg"
			android:inputType="text"
			android:hint="输入收货人姓名"/>

	</LinearLayout>

	<!-- 省 -->
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="10dp" >

		<TextView
			android:layout_width="70dp"
			android:layout_height="wrap_content" 
			android:singleLine="true"
			android:id="@+id/receiver_area_text"
			android:text="省份："/>

		<Spinner
			android:id="@+id/receiver_province_spinner"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="14sp"
			android:maxLength="35"
			android:background="@drawable/edittext_bg"
			android:inputType="text"
			android:hint="--请选择省份--"/>
		
		
	</LinearLayout>
	
	<!-- 市 -->
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="10dp" >

		<TextView
			android:layout_width="70dp"
			android:layout_height="wrap_content" 
			android:singleLine="true"
			android:id="@+id/receiver_area_text"
			android:text="市："/>

		<Spinner
			android:id="@+id/receiver_city_spinner"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="14sp"
			android:maxLength="35"
			android:background="@drawable/edittext_bg"
			android:inputType="text"
			android:hint="--请选择--"/>
	</LinearLayout>
	
	<!-- 区 -->
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="10dp" >

		<TextView
			android:layout_width="70dp"
			android:layout_height="wrap_content" 
			android:singleLine="true"
			android:id="@+id/receiver_area_text"
			android:text="区："/>

		<Spinner
			android:id="@+id/receiver_area_spinner"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="14sp"
			android:maxLength="35"
			android:background="@drawable/edittext_bg"
			android:inputType="text"
			android:hint="--请选择--"/>
	</LinearLayout>
	
	<!-- 地址 -->
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="10dp" >

		<TextView
			android:layout_width="70dp"
			android:layout_height="wrap_content" 
			android:singleLine="true"
			android:id="@+id/receiver_address_text"
			android:text="地址："/>

		<EditText
			android:id="@+id/receiver_address_edittext"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="14sp"
			android:maxLength="80"
			android:background="@drawable/edittext_bg"
			android:inputType="text"
			android:hint="输入详细地址"/>

	</LinearLayout>
	
	<!-- 邮编 -->
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="10dp" >

		<TextView
			android:layout_width="70dp"
			android:layout_height="wrap_content" 
			android:singleLine="true"
			android:id="@+id/receiver_post_text"
			android:text="邮编："/>

		<EditText
			android:id="@+id/receiver_post_edittext"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="14sp"
			android:maxLength="6"
			android:background="@drawable/edittext_bg"
			android:inputType="phone"
			android:hint="输入邮编"/>

	</LinearLayout>
	
	<!-- 手机号码 -->
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="10dp" >

		<TextView
			android:layout_width="70dp"
			android:layout_height="wrap_content" 
			android:singleLine="true"
			android:id="@+id/receiver_phone_text"
			android:text="手机号码："/>

		<EditText
			android:id="@+id/receiver_phone_edittext"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="14sp"
			android:maxLength="11"
			android:background="@drawable/edittext_bg"
			android:inputType="phone"
			android:hint="输入手机号码"/>

	</LinearLayout>
	
	<!-- 电子邮箱 -->
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="10dp" >

		<TextView
			android:layout_width="70dp"
			android:layout_height="wrap_content" 
			android:singleLine="true"
			android:id="@+id/receiver_email_text"
			android:text="电子邮箱："/>

		<EditText
			android:id="@+id/receiver_email_edittext"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="14sp"
			android:maxLength="40"
			android:background="@drawable/edittext_bg"
			android:inputType="textEmailAddress"
			android:hint="输入电子邮箱"/>
	</LinearLayout>
</LinearLayout>
</LinearLayout>