<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/receiver_item_id"
        android:visibility="invisible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/receiver_item_name"
        android:text="user"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/receiver_item_phone"
        android:layout_marginLeft="12dp" 
        android:layout_toRightOf="@id/receiver_item_name"
        android:text="user"/>
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/receiver_item_default"
        android:visibility="invisible"
        android:src="@drawable/plus"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/receiver_item_address"
        android:layout_below="@id/receiver_item_name"
        android:text="user"/>
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/receiver_item_edit"
	    android:orientation="horizontal"
	    android:layout_below="@id/receiver_item_address"
	    android:layout_alignParentRight="true">
	    <ImageView 
	        android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"/>
	    <TextView 
	        	android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:text="编辑"/>
	</LinearLayout>
</RelativeLayout>