<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="43dp"
    android:background="#E8E8E8"
    android:gravity="center" >

    <ProgressBar
        android:id="@+id/push_up_to_load_more_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginRight="8dp"
        style="?android:attr/progressBarStyleSmall"
        android:indeterminate="true" />
    
    <TextView
        android:id="@+id/push_up_to_load_more_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pull_up_to_refresh_label"
        android:textSize="15sp"
        android:textColor="#94b5a4" />
    
    <TextView
        android:id="@+id/pull_up_to_refresh_failed_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pull_up_to_refresh_failed_label"
        android:textSize="15sp"
        android:textColor="#94b5a4"
        android:visibility="gone" />

</LinearLayout>